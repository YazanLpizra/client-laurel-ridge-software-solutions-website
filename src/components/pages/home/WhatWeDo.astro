---
const cardData = [
    {
        title: "Mobile-First, Fully Responsive Design",
        text: "100% hand-coded websites that deliver flawless experiences across all devices. No templates or page builders - every site is custom-crafted for your brand and optimized for every screen size from the ground up.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
    {
        title: "eCommerce Solutions",
        text: "Robust Shopify eCommerce solutions tailored to your business needs. From custom product catalogs to seamless payment integrations, we build secure, scalable online stores that drive sales and enhance customer experiences.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
    {
        title: "Tool Integrations and Automations",
        text: "Transform your operations with custom integrations and business automation. Connect your existing tools, streamline workflows, and eliminate manual tasks - saving up to 80% of repetitive work time.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
    {
        title: "Custom Software Solutions",
        text: "Enterprise-grade solutions tailored for small and medium businesses. From custom web applications to cloud infrastructure, we bring 10 years of enterprise development experience to every project.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
    {
        title: "Optimized Performance",
        text: "Lightning-fast websites that outperform WordPress sites. Our hand-coded approach delivers superior loading speeds, perfect Google PageSpeed scores, and exceptional user experiences that convert visitors into customers.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
    {
        title: "Based in America",
        text: "Direct communication with our team based in Connecticut, USA. No language barriers, shared time zones, and personalized service. Work directly with experienced developers who understand your market and business needs.",
        link: "",
        image: "https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/teeth.png",
    },
];
---

<section id="services-1974">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">What We Do</span>
            <h2 class="cs-title">Using Software to Elevate Your Business</h2>
            <p class="cs-text">
                From custom hand-coded websites to business automation, our team
                delivers enterprise-grade solutions tailored for small and
                medium businesses.
            </p>
        </div>
        <ul class="cs-card-group">
            {
                cardData.map((card) => (
                    <li class="cs-item">
                        <div class="cs-flex">
                            <div class="cs-card-header">
                                <h3 class="cs-h3">{card.title}</h3>
                            </div>
                            <p class="cs-item-text">{card.text}</p>
                            {card.link && (
                                <a href={card.link} class="cs-link">
                                    Learn More
                                </a>
                            )}
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</section>

<style lang="scss">
    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
        #services-1974 {
            padding: var(--sectionPadding);
            overflow: hidden;
            position: relative;

            &::before {
                content: "";
                width: 100%;
                height: 100%;
                opacity: 0.05;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
            }

            .cs-container {
                width: 100%;
                max-width: calc(704 / 16 * 1rem);
                margin: auto;
                display: flex;
                flex-direction: column;
                align-items: center;
                /* 48px - 64px */
                gap: clamp(3rem, 6vw, 4rem);
            }

            .cs-content {
                /* set text align to left if content needs to be left aligned */
                text-align: center;
                width: 100%;
                display: flex;
                flex-direction: column;
                /* centers content horizontally, set to flex-start to left align */
                align-items: center;
            }

            .cs-card-group {
                width: 100%;
                margin: 0 auto;
                padding: 0;
                display: grid;
                grid-template-columns: repeat(12, 1fr);
                /* 16px - 20px */
                gap: clamp(1rem, 2vw, 1.25rem);
            }

            .cs-item {
                text-align: left;
                list-style: none;
                width: 100%;
                margin: 0 auto;
                /* prevents padding and border from affecting height and width */
                box-sizing: border-box;
                /* 16px - 32px */
                padding: clamp(1rem, 4.5vw, 2rem);
                border-radius: calc(8 / 16 * 1rem);
                box-sizing: border-box;
                display: flex;
                flex-direction: column;
                grid-column: span 12;
                grid-row: span 1;
                gap: calc(32 / 16 * 1rem);
                position: relative;
                z-index: 1;
                border: 1px solid transparent;
                transition: border-color 0.3s;

                &:hover {
                    border-color: var(--primary);
                }
            }

            .cs-flex {
                display: flex;
                flex-direction: column;
            }

            .cs-h3 {
                /* 20px - 25px */
                font-size: clamp(1.25rem, 2.5vw, 1.5625rem);
                font-weight: 700;
                line-height: 1.2em;
                text-align: inherit;
                // margin: 0 0 calc(16 / 16 * 1rem) 0;
                color: var(--headerColor);
                transition: color 0.3s;
                flex-grow: 2;
            }

            .cs-item-text {
                font-size: calc(16 / 16 * 1rem);
                line-height: 1.5em;
                max-width: calc(450 / 16 * 1rem);
                margin: 0;
                margin-bottom: calc(24 / 16 * 1rem);
                padding: 0;
                color: var(--bodyTextColor);
            }

            .cs-link {
                font-size: calc(16 / 16 * 1rem);
                font-weight: 700;
                line-height: 1.2em;
                text-align: inherit;
                text-decoration: none;
                max-width: fit-content;
                margin-top: auto;
                color: var(--primary);
                border-bottom: 1px solid var(--primary);
                display: flex;
                justify-content: flex-start;
                align-items: center;
            }

            .cs-picture {
                margin: 0;
                flex-grow: 1;
                max-width: 30%;
                // padding: calc(58 / 16 * 1rem) 0 0 calc(115 / 16 * 1rem);
                border-radius: calc(8 / 16 * 1rem);
                overflow: hidden;
                display: flex;
                justify-content: center;
                align-items: center;
                position: relative;

                &:before {
                    content: "";
                    width: 100%;
                    height: 100%;
                    opacity: 0.05;
                    position: absolute;
                    top: 0;
                    left: 0;
                    z-index: -1;
                }

                img {
                    width: 100%;
                    height: auto;
                    display: block;
                }
            }
            .cs-card-header {
                display: flex;
                gap: 1rem;
                justify-items: center;
                align-items: center;
                margin: 0 0 calc(16 / 16 * 1rem) 0;
            }
        }
    }

    /* Tablet - 768px */
    @media only screen and (min-width: 48rem) {
        #services-1974 {
            .cs-container {
                max-width: calc(1280 / 16 * 1rem);
            }

            .cs-content {
                width: 60%;
            }

            .cs-item {
                flex-direction: row;
                justify-content: space-between;
                align-items: stretch;
            }

            .cs-picture {
                height: auto;
                // padding: calc(61 / 16 * 1rem) 0 0 calc(4 / 16 * 1rem);
            }
        }
    }

    /* Small Desktop - 1024px */
    @media only screen and (min-width: 64rem) {
        #services-1974 {
            .cs-item {
                grid-column: span 4;
            }

            .cs-picture {
                // padding: calc(133 / 16 * 1rem) 0 0 calc(4 / 16 * 1rem);
            }
        }
    }

    /* Large Desktop - 1300px */
    @media only screen and (min-width: 81.25rem) {
        #services-1974 {
            .cs-picture {
                // padding: calc(37 / 16 * 1rem) 0 0 calc(4 / 16 * 1rem);
            }
        }
    }

    /* Dark Mode */
    @media only screen and (min-width: 0rem) {
        body.dark-mode {
            #services-1974 {
                background-color: rgba(0, 0, 0, 0.6);

                .cs-item {
                    background-color: var(--medium);
                }

                .cs-title,
                .cs-text,
                .cs-h3,
                .cs-item-text,
                .cs-link {
                    color: var(--bodyTextColorWhite);
                }

                .cs-text,
                .cs-item-text {
                    opacity: 0.8;
                }

                .cs-picture {
                    background-color: var(--dark);
                }
            }
        }
    }
</style>
